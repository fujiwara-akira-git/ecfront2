{
  "name": "eagle-palace-ec",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:https": "cross-env PORT=3001 next dev",
    "dev:https:proxy": "node ./scripts/https-proxy.js",
    "dev:https:direct": "node ./scripts/next-https-dev.js",
    "dev:bg": "bash ./scripts/start-dev-bg.sh",
    "seed:emulator": "export FIRESTORE_EMULATOR_HOST=localhost:8080 && node firebase/seed/seed.js",
    "seed": "ts-node prisma/seed.ts",
    "emulators:start": "firebase emulators:start --only functions,firestore",
    "emulators:stop": "firebase emulators:stop",
    "build": "node ./scripts/prisma-generate.js && next build",
    "postbuild": "node ./scripts/fix-next-chunks.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test": "jest --passWithNoTests --runInBand",
    "start": "next start",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "ssl-proxy": "local-ssl-proxy --source 3001 --target 3000 --cert certs/localhost.pem --key certs/localhost-key.pem",
    "db:migrate:prod": "NODE_ENV=production npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "deploy:prod": "npm run build && vercel --prod",
    "postinstall": "node ./scripts/prisma-postinstall.js",
    "stripe:listen": "./scripts/stripe-listen.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "@sentry/node": "^10.12.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "next": "^15.5.3",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "stripe": "^18.5.0",
    "stripe-cli": "^0.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@types/jest": "^29.5.3",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^6.7.1",
    "@typescript-eslint/parser": "^6.7.1",
    "cross-env": "^10.0.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "^15.5.2",
    "husky": "^8.0.0",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.0",
    "local-ssl-proxy": "^2.0.0",
    "prettier": "^3.0.0",
    "prisma": "^6.16.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2",
    "minimist": "^1.2.8"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,css,md}": [
      "npx prettier --write",
      "npm run lint --silent --fix"
    ]
  }
}
